<!DOCTYPE html>
<html>
  <head>
    <title>Admin</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "admin/admin_application", media: "all", "data-turbolinks-track": "reload" %>
    <%= javascript_include_tag "admin/admin_application", "data-turbolinks-track": "reload" %>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
  </head>
  <body>
    <%= render "layouts/header_admin" %>
    <div class="block-main">
      <div class="block-left">
        <%= render "layouts/left_admin" %>
      </div>
      <div class="block-right">
        <% flash.each do |message_type, message| %>
          <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
        <% end %>
        <%= yield %>
      </div>
    </div>
    <%= render "layouts/footer_admin" %>
  </body>
</html>

