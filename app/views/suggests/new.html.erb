<main id="tg-main" class="tg-main tg-haslayout">
  <div class="new">
    <div class="tg-coming">
      <strong class="tg-logo">
        <%= link_to image_tag("logo-02.png", alt: "logo") %>
      </strong>
      <div class="tg-formtheme tg-formnewsletter">
        <%= form_for current_user.suggests.build do |f| %>
          <%= render "shared/error_messages", object: @suggest %>
          <%= f.hidden_field :user_id, value: current_user.id %>
          <div class="form-group">
            <%= f.label :book_name %>
            <%= f.text_field :title, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :book_category %>
            <%= f.text_field :categories, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :author %>
            <%= f.text_field :author, class: "form-control" %>
          </div>
          <div class="actions">
            <%= f.submit t(".send"), class: "btn btn-success" %>
            <%= link_to t(".back"), suggests_path, class: "btn btn-default" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>
