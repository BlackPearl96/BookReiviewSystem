<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <% if @user.image %>
        <%= image_tag(@user.image)%>
      <% else %>
        <%= image_tag @user.picture.url if @user.picture? %>
      <% end %>
      <h1><%= @user.name %></h1>
      <span><%= link_to t("view.users.user.view_profile"), @user %></span>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <% if user.image %>
              <%= image_tag(user.image)%>
            <% else %>
              <%= image_tag user.picture.url if user.picture? %>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>
