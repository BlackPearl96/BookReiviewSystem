<%= search_form_for @search_categories, url: admin_categories_path, method: :get do |f| %>
  <div class="field">
    <%= f.text_field :name_cont, class: "form-control",
      placeholder: t("view.admin.category.search_category") %>
    <%= f.submit t("view.admin.submit_search"), class: "btn btn-success" %>
  </div>
<% end %>
