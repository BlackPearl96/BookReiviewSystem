<h2><%= t ".add_user" %></h2>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for [:admin, @user] do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.select :role, options_for_select(select_roles) %>
        <%= f.file_field :picture %>
        <%= f.input :name, required: true, autofocus: true %>
        <%= f.input :email, required: true, autofocus: true %>
        <%= f.input :address, required: true, autofocus: true %>
        <%= f.input :password,required: true,
          hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { autocomplete: t(".new-password") } %>
        <%= f.input :password_confirmation, required: true,
          input_html: { autocomplete: t(".new-password") } %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, t("view.admin.user.sign_up"), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
