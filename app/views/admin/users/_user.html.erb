<div id="update_<%= user.id %>" >
  <table class="table table-striped table-bordered table-hover" id="dataTables-example">
    <thead>
      <tr>
        <th class="id"><%= t("admin.users.id") %></th>
        <th class="name"><%= t("admin.users.user_name") %></th>
        <th class="email"><%= t("admin.users.email") %></th>
        <th class="role"><%= t("admin.users.role") %></th>
        <th class="action"><%= t "admin.users.action" %></th>
      </tr>
    </thead>
    <tbody>
      <tr class=" gradeX">
        <td id="catId"><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
          <% if user.admin? %>
            <td><span class="label label-info"><%= user.role %></span></td>
          <% else %>
            <td><span class="label label-default"><%= user.role %></span></td>
          <% end %>
        <td class="center">
          <% if current_user.admin? && !current_user?(user) %>
            <%= link_to t("admin.users.delete"), admin_user_path(user), method: :delete,
              data: { confirm: t("view.users.user.sure") },class: "fa fa-trash btn btn-danger " %>
            <%= link_to user.admin? ? t("admin.users.setuser") : t("admin.users.setadmin"), admin_user_path(user), method: :patch, class: "btn btn-success", remote: true %>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
