<%= search_form_for @search, url: admin_users_path, method: :get do |f| %>
  <div class="field">
    <%= f.label :name_cont, t("admin.users.search_user") %>
    <%= f.text_field :name_cont, class: "form-control",
      placeholder: t("view.admin.user.search_user") %>
    <%= f.text_field :email_cont, class: "form-control",
      placeholder: t("view.admin.user.search_email") %>
    <%= f.select :role_cont, options_for_select(User.roles),
    prompt: t("view.admin.user.selection_role") %>
    <%= f.submit t("view.admin.submit_search"), class: "btn btn-success" %>
  </div>
<% end %>
