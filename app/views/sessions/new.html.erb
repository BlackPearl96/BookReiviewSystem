<% provide :title, t("view.sessions.login") %>
<h1><%= t "view.sessions.login" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: new_user_session_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password %>
      <%= link_to "(forgot password)", new_password_reset_path %>

      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t "view.sessions.remember" %></span>
      <% end %>

      <%= f.submit t("view.sessions.login"), class: "btn btn-primary" %>
    <% end %>

    <p><%= t "view.sessions.new_user" %>? <%= link_to t("view.sessions.signup"), signup_path %></p>
  </div>
</div>
